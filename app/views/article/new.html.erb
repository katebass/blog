<% if @article.errors.any? %>
	<% @article.errors.full_messages.each do |element| %>
		<div> <%= element %> </div>
	<% end %>
<% end %>

<%= form_for @article, url: create_article_path do %>
	<input type="text" name="article[title]">
	<input type="text" name="article[content]">
	<input type="submit">
<% end %>